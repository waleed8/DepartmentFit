<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/course_vertical_margins"
    card_view:cardCornerRadius="10dp"
    android:padding="5dp"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorCardBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Course:"
            android:id="@+id/tvCourseName"
            android:textSize="@dimen/course_title_font_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorGridBackGround"
            android:gravity="center_horizontal"
            android:textStyle="bold" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="0"
            android:indeterminate="false"
            android:id="@+id/seek_CourseLevel"
            android:layout_below="@+id/tvCourseName"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tvCourseLevel"
            android:textColor="@color/colorTextColor"/>
        <!--<com.bq.markerseekbar.MarkerSeekBar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:max="10"-->
            <!--android:progress="0"-->
            <!--app:markerColor="@color/colorPrimary"-->
            <!--app:markerTextColor="#ffffff"-->
            <!--android:indeterminate="false"-->
            <!--android:id="@+id/seek_CourseLevel"-->
            <!--android:layout_below="@+id/tvCourseName"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_toLeftOf="@+id/tvCourseLevel"-->
            <!--android:textColor="@color/colorTextColor"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0/10"
            android:id="@+id/tvCourseLevel"
            android:layout_below="@+id/buttonExpandCollapse"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorGridBackGround"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/buttonExpandCollapse"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/seek_CourseLevel"
            android:layout_alignStart="@+id/tvCourseLevel" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
